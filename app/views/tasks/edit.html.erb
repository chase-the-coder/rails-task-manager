<div class="container pt-4 text-left d-flex justify-content-center">
  <div class="card p-4">
    <h1>Edit Task</h1>
    <%= form_for(@task) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :details %>
        <%= f.text_field :details, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.check_box :completed %>
        <%= f.label :completed %>
      </div>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
    <div class="border-top m-2 p-2">
      <%= link_to "Back to list", tasks_path %>
    </div>
  </div>
</div>
