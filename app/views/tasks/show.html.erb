<div class="container pt-4 text-left d-flex justify-content-center">
  <div class="card p-4">
    <h2 class="pb-4"><%= @task.title %></h2>
    <div>
      <span class="alert alert-secondary d-block" role="alert"><%= @task.details %></span>
      <a href="/tasks/<%= @task.id %>/edit" class="btn btn-outline-dark" role="button" aria-pressed="true"><i class="fas fa-pencil-alt"></i> Edit</a>
      <% if @task.completed %>
         <p class="mt-3"><i class="far fa-check-square"></i> This task is completed.</p>
      <% else %>
          <p class="mt-3"><i class="far fa-square"></i> This task is not yet completed.</p>
      <% end %>
    </div>
    <div class="border-top p-2">
      <%= link_to "Back to list", tasks_path %>
    </div>
  </div>
</div>
